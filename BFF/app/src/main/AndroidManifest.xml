<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sk.upjs.ics.bff" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
        <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
        <uses-permission android:name="android.permission.READ_CONTACTS" />
        <uses-permission android:name="android.permission.CALL_PHONE" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DrinkActivity"
            android:label="@string/title_activity_drink" >
        </activity>
        <activity
            android:name=".HaveFunActivity"
            android:label="@string/title_activity_have_fun" >
        </activity>
        <activity
            android:name=".PhoneCalls"
            android:label="@string/title_activity_phone_calls" >
        </activity>
        <activity
            android:name=".EditProfileActivity"
            android:label="@string/title_activity_edit_profile" >
        </activity>

        <provider
            android:name=".provider.StatisticsContentProvider"
            android:authorities="StatisticsContentProvider"
            android:enabled="true"
            android:exported="false" >
        </provider>

        <activity
            android:name=".Statistics"
            android:label="@string/title_activity_statistics" >
        </activity>
        <activity
            android:name=".WhereamiActivity"
            android:label="@string/title_activity_whereami" >
        </activity>
        <activity
            android:name=".util.PhoneCallsActivity"
            android:label="@string/title_activity_phone_calls" >
        </activity>
        <activity
            android:name=".CallGrid"
            android:label="@string/title_activity_call_grid" >
        </activity>
    </application>

</manifest>
